                     <field name="check_out"/>
                    <field name="is_present" attrs="{'readonly':[('is_present','=',True)]}" />
                    <field name="is_absent" attrs="{'readonly':[('is_absent','=',True)]}" />
                </tree>
            </field>
        </record>

